<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
   <servlet>
       <servlet-name>loginServlet</servlet-name>
       <servlet-class>com.servlet.loginServlet</servlet-class>
   </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signInServlet</servlet-name>
        <servlet-class>com.servlet.signInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signInServlet</servlet-name>
        <url-pattern>/signInServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showFruitMessage</servlet-name>
        <servlet-class>com.servlet.showFruitMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showFruitMessage</servlet-name>
        <url-pattern>/showFruitMessage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>redactServlet</servlet-name>
        <servlet-class>com.servlet.redactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>redactServlet</servlet-name>
        <url-pattern>/redactFruit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modify</servlet-name>
        <servlet-class>com.servlet.modifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modify</servlet-name>
        <url-pattern>/modifyFruit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addFruit</servlet-name>
        <servlet-class>com.servlet.addServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addFruit</servlet-name>
        <url-pattern>/addFruit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteFruit</servlet-name>
        <servlet-class>com.servlet.deleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteFruit</servlet-name>
        <url-pattern>/deleteFruit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchFruit</servlet-name>
        <servlet-class>com.servlet.searchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchFruit</servlet-name>
        <url-pattern>/searchFruit</url-pattern>
    </servlet-mapping>
</web-app>